<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SecondFragment">

    <ImageView
        android:id="@+id/cat_imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cat_id_textView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/cat_item_top_bottom_margin"
        android:layout_marginBottom="@dimen/cat_item_top_bottom_margin"
        tools:src="@tools:sample/avatars">
    </ImageView>

    <TextView
        android:id="@+id/cat_id_textView"
        tools:text="@tools:sample/cities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/cat_item_side_margin"
        android:layout_marginEnd="@dimen/cat_item_side_margin"
        android:layout_marginTop="@dimen/cat_item_top_bottom_margin"
        android:layout_marginBottom="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cat_imageView"
        android:transitionName="exampleText">
    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>
